@model List<ProyectoInicial.Models.Usuario>
@{
    ViewData["Title"] = "Usuarios";
}

<h1 class="text-light">@ViewData["Title"]</h1>

<button type="button" class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Usuario")'">Nuevo Usuario</button>

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
<style>
    body {
        background-color: #001a1a;
        padding: 20px; /* Añadir espacio alrededor de la tabla */
    }
    /* Estilo para la tabla */
    table {
        background-color: blue;
        color: #fff; /* Texto en color blanco para mejor contraste */
    }

    /* Estilo para el fondo de la tabla */
    tbody {
        background-color: #fff;
    }

    /* Estilo para el encabezado de la tabla */
    .thead-dark th {
        background-color: green;
        color: #fff;
        border-color: green;
    }


    /* Estilo para los botones cuando se les pasa el ratón */
    .btn-primary {
        background-color: #008000; /* Cambiado a verde para destacar */
        border-color: #008000;
        color: #fff;
        transition: background-color 0.3s ease, box-shadow 0.3s ease;
        box-shadow: 0px 0px 5px rgba(0, 0, 0, 0.3);
    }

        /* Estilo para los botones cuando se les pasa el ratón */
        .btn-primary:hover {
            background-color: #006400; /* Color de cambio al pasar el ratón para resaltar */
            border-color: #006400;
            box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.5);
        }
</style>
<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nombre</th>
            <th scope="col">Apellido</th>
            <th scope="col">Perfil</th>
            <th scope="col">UsuarioP</th>
            <th scope="col">Contrasena</th>
            <th scope="col">Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {

            <tr>
                <th scope="row">@item.IdUsuario</th>
                <td>@item.Nombre</td>
                <td>@item.Apellido</td>

                <td>@item.Perfil</td>
                <td>@item.UsuarioP</td>
                <td>@item.Contrasena</td>
                <td>

                    <div class="btn-group" role="group" aria-label="Basic mixed styles example">
                        <a asp-action="Delete" asp-route-IdUsuario="@item.IdUsuario" class="btn btn-danger"><i class="fa-solid fa-trash"></i></a>
                        <a asp-action="Edit" asp-route-IdUsuario="@item.IdUsuario" class="btn btn-warning"><i class="fa-solid fa-user-pen"></i></a>
                        
                    </div>

                </td>
            </tr>

        }
    </tbody>
</table>